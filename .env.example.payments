# CHANGANET - Environment Variables for Payments and Commissions Module
# Copy this file to .env and fill in your actual values
# Compatible with environments without Docker

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# For PostgreSQL production (replace with your actual connection string)
DATABASE_URL="postgresql://username:password@localhost:5432/changanet_db"

# For development with SQLite (if no PostgreSQL available)
# DATABASE_URL="file:./dev.db"

# ===========================================
# MERCADOPAGO CONFIGURATION (REQUIRED)
# ===========================================
# Get these from your MercadoPago dashboard
MERCADOPAGO_ACCESS_TOKEN="APP_USR-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
MERCADO_PAGO_ACCESS_TOKEN="APP_USR-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
MERCADO_PAGO_PUBLIC_KEY="APP_USR-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

# ===========================================
# PAYMENT AND COMMISSION SETTINGS
# ===========================================
# Platform commission rate (5-10% as per PRD)
PLATFORM_COMMISSION_RATE=0.05

# Payment limits in ARS
MIN_PAYMENT_AMOUNT=500
MAX_PAYMENT_AMOUNT=500000

# Withdrawal limits in ARS
MIN_WITHDRAWAL_AMOUNT=100
MAX_WITHDRAWAL_AMOUNT=50000

# Urgent service surcharge (20% default)
URGENT_SERVICE_SURCHARGE=0.2

# ===========================================
# BACKEND CONFIGURATION
# ===========================================
# Your backend URL for webhooks
BACKEND_URL="https://your-domain.com"

# Server port
PORT=3002

# Environment
NODE_ENV="production"

# ===========================================
# OPTIONAL SERVICES
# ===========================================
# Redis for caching (optional)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# Sentry for error monitoring (optional)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# ===========================================
# SECURITY
# ===========================================
# JWT Secret (generate a strong random string)
JWT_SECRET="your-super-secure-jwt-secret-here-change-this-in-production"

# Session Secret (generate a strong random string)
SESSION_SECRET="your-super-secure-session-secret-here-change-this-in-production"

# ===========================================
# NOTIFICATIONS (OPTIONAL)
# ===========================================
# SendGrid for email notifications
SENDGRID_API_KEY="SG.your-sendgrid-api-key"

# Twilio for SMS notifications
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Firebase for push notifications
FIREBASE_PROJECT_ID="changanet-notifications"

# ===========================================
# FILE STORAGE (OPTIONAL)
# ===========================================
# Cloudinary for image storage
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# ===========================================
# FRONTEND URL
# ===========================================
FRONTEND_URL="https://your-frontend-domain.com"

# ===========================================
# GOOGLE OAUTH (IF USING SOCIAL LOGIN)
# ===========================================
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="https://your-domain.com/api/auth/google/callback"